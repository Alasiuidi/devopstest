pipeline {
  agent any

  options {
    timestamps()
  }

  triggers {
    pollSCM('H/1 * * * *')   // Jenkins local : v√©rifie les commits chaque minute
  }

  environment {
    IMAGE_NAME     = "express-dev"
    CONTAINER_NAME = "express-dev-container"
    APP_PORT       = "3000"
  }

  stages {

    /* =======================
       1. CHECKOUT
    ======================= */
    stage('Checkout') {
      when {
        branch 'dev'
      }
      steps {
        checkout scm
      }
    }

    /* =======================
       2. SETUP
    ======================= */
    stage('Setup') {
      steps {
        powershell '''
          docker --version
        '''
      }
    }

    /* =======================
       3. BUILD
    ======================= */
    stage('Build') {
      steps {
        powershell '''
          docker build -f DOCKERFILE -t $env:IMAGE_NAME .
        '''
      }
    }

    /* =======================
       4. RUN (DOCKER)
    ======================= */
    stage('Run (Docker)') {
      steps {
        powershell '''
          if (docker ps -a --format "{{.Names}}" | Select-String "$env:CONTAINER_NAME") {
            docker rm -f $env:CONTAINER_NAME
          }

          docker run -d `
            --name $env:CONTAINER_NAME `
            -e REQUIRE_DB=false `
            -p $env:APP_PORT:3000 `
            $env:IMAGE_NAME
        '''
      }
    }

    /* =======================
       5. SMOKE TEST
    ======================= */
    stage('Smoke Test') {
      steps {
        powershell '''
          Start-Sleep -Seconds 5
          Write-Host "Running smoke test on port $env:APP_PORT"
          .\\scripts\\smoke.ps1 $env:APP_PORT
        '''
      }
    }

    /* =======================
       6. ARCHIVE ARTIFACTS
    ======================= */
    stage('Archive Artifacts') {
      steps {
        archiveArtifacts artifacts: '''
          scripts/**,
          DOCKERFILE,
          Jenkinsfile*
        ''', fingerprint: true
      }
    }
  }

  /* =======================
     CLEANUP
  ======================= */
  post {
    always {
      powershell '''
        if (docker ps -a --format "{{.Names}}" | Select-String "$env:CONTAINER_NAME") {
          docker rm -f $env:CONTAINER_NAME
        }
      '''
    }
  }
}
